@model IEnumerable<ListsMobileApp.Models.Income>

@{
    ViewBag.Title = "Incomes";
}

<div class="wrapperIncome">
    <h2 class="Theader">Incomes</h2>
    <table class="table">
        <tr>
            <th class="Theader">
                @Html.DisplayNameFor(model => model.IncomeSorce)
            </th>
            <th class="Theader">
                @Html.DisplayNameFor(model => model.IncomeAmount)
            </th>
            <th class="Theader">
                Edit
            </th>
        </tr>
        <tr style="background-color:#C0F4D1;">
            <td colspan="3" style="border-top:solid 1px white;padding:0;">
                <hr class="hrth" />
            </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="rowIncome">
                <td id="TData">
                    @Html.DisplayFor(modelItem => item.IncomeSorce)
                </td>
                <td id="TData">
                    @Html.DisplayFor(modelItem => item.IncomeAmount)
                </td>
                <td id="TData">
                    @Html.ActionLink("Details", "Details", new { id = item.IDIncome }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDIncome }) |
                </td>
            </tr>
            <tr style="background-color:#C0F4D1;">
                <td colspan="3" style="padding:0;">
                    <hr class="hrt" />
                </td>
            </tr>
        }
    </table>
    <div class="goToCreate">
        <a href="http://localhost:58359/Incomes/Create">
            <img src="~/Photos/add.png" />
        </a>
    </div>
</div>